<% layout("/layouts/boilerplate") %>

<div class="row">
    <div class="col-8 offset-2">

    <h3>Listing Details : </h3>
    </div>
    

    <div class="card col-6 offset-2">
    <img src="<%= listing.image %> " alt="listing_image" class="card-img-top show-img ">
    
    <div class="card.col-6 offset-2">

        <div class="card-body">
             <p class="card-text"><%= listing.title %> </p>
            </div>
        </div>
    <ul>
        <li><%= listing.title %></li>
        <li><%= listing.description %></li>
        
        <li> &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %></li>

        <li><%= listing.location %></li>
        <li><%= listing.country %></li>       
</div>


    </ul>
    <br>
    <a href="/listings/<%= listing._id %>/edit">Edit This Listing</a>
    <br><br>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button>Delete this listing</button>
    </form>
    </div>
    </div>

